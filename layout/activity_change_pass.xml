<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/success"
        android:text="Update Password"
        android:textSize="24sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginTop="70dp"/>

            <EditText
                android:id="@+id/change_pass_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:background="@drawable/inputs"
                android:drawableTint="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_email"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textCursorDrawable="@color/colorPrimary"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passLayout"
                android:layout_below="@+id/change_pass_email"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/change_pass_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:hint="@string/old_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_password"
                android:background="@drawable/inputs"
                android:textCursorDrawable="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/npassLayout"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:layout_below="@+id/passLayout"
                app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/change_pass_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_password"
                android:background="@drawable/inputs"
                android:textCursorDrawable="@color/colorPrimary"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/change_pass_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/npassLayout"
                android:text="@string/update"
                android:padding="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textSize="24sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/my_buttons"
                />

        </LinearLayout>
