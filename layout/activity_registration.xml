<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlayout"
    tools:context=".Registration">

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enroll for a unit"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_below="@+id/tvDesc"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:id="@+id/email"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:layout_below="@+id/email"
        android:enabled="false"
        android:textColor="@android:color/black"
        android:id="@+id/inputEmail"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="text"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registration number"
                        android:layout_below="@+id/inputEmail"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:id="@+id/reg"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/inputs"
                        android:padding="10dp"
                        android:layout_below="@+id/reg"
                        android:id="@+id/inputReg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:inputType="text"/>
   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course"
        android:layout_below="@+id/inputReg"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:id="@+id/course"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:layout_below="@+id/course"
        android:id="@+id/inputCourse"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="text"/>-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Year of Study"
                            android:id="@+id/year"
                            android:layout_below="@+id/inputReg"
                            android:fontFamily="monospace"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"/>
                        <Spinner
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner"
                            android:layout_below="@+id/inputReg"
                            android:textAlignment="inherit"
                            android:layout_marginTop="10dp"
                            android:visibility="visible"
                            android:layout_marginLeft="160dp"
                            />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="14sp"
                        android:layout_below="@+id/year"
                        android:id="@+id/gender"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="monospace"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"/>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radiogroup"
                        android:layout_below="@id/year"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="70dp">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/male"
                                android:checked="true"
                                android:buttonTint="@color/colorPrimary"
                                android:text="Male"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/female"
                                android:buttonTint="@color/colorPrimary"
                                android:text="Female"/>
                    </RadioGroup>
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Unit"
                            android:id="@+id/unitTv"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="monospace"
                            android:layout_marginRight="10dp"
                            android:layout_below="@id/radiogroup"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"/>
                        <Spinner
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/unit"
                            android:textAlignment="inherit"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/radiogroup"
                            android:layout_marginLeft="160dp"
                            android:visibility="visible"
                            />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:layout_below="@+id/unitTv"
                    android:layout_marginTop="50dp"
                    android:id="@+id/btnRegister"
                    android:textAllCaps="false"
                    android:elevation="10dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/my_buttons"/>




</RelativeLayout>